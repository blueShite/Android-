<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="64dp"
              android:background="@color/ColorMianApp">

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
        <ImageView
            android:id="@+id/searchTitle_logo"
            android:layout_centerVertical="true"
            android:src="@mipmap/home_logo"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="24dp"/>

        <Button
            android:id="@+id/searchTitle_searchBtn"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:background="@color/ColorMianApp"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:textColor="#fff"
            android:text="搜索"
            android:textSize="18dp"
            android:layout_height="30dp"/>

        <Button
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/searchTitle_logo"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:background="#fff"
            android:layout_toLeftOf="@id/searchTitle_searchBtn"
            android:layout_marginRight="15dp"
            android:layout_height="30dp"/>




    </RelativeLayout>


</LinearLayout>