<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

    <RelativeLayout
        android:layout_margin="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/home_CommodityImage"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/notimageurl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/home_commodityName"
            android:layout_below="@+id/home_CommodityImage"
            android:textSize="15dp"
            android:singleLine="true"
            android:text="呵呵呵呵"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"/>

        <Button
            android:id="@+id/home_commodityAddBtn"
            android:background="@mipmap/shoppingcart_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/home_commodityName"/>

        <TextView
            android:id="@+id/home_commodityPrice"
            android:textSize="12dp"
            android:text="金额:12元"
            android:layout_below="@+id/home_commodityName"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"/>

    </RelativeLayout>




</RelativeLayout>